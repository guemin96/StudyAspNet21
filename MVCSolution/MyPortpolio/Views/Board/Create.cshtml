@model MyPortpolio.Models.Board

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>Create</h1>

<h4>Board</h4>
<hr />
<div class="col-lg col-md ml-auto mr-auto">
    <div class="card card-login">
        <div class="section section-contacts" >
            <div class="row">
                <div class="col-md-8 ml-auto mr-auto">
                    <h3 class="text-center title" style="color:black; vertical-align:top">Board</h3>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label asp-for="Subject" class="control-label"></label>
                            <input asp-for="Subject" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Writer" class="control-label"></label>
                            <input asp-for="Writer" class="form-control" />
                            <span asp-validation-for="Writer" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Contents" class="control-label"></label>
                            <input asp-for="Contents" class="form-control" />
                            <span asp-validation-for="Contents" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" /> |
                            <a asp-action="Index" class="btn btn-primary">리스트</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



